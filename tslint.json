{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "jsRules": {},
  "rules": {
    "no-var-requires": false,
    "no-console": false,
    "no-namespace": false,
    "variable-name": [
      "allow-leading-underscore"
    ]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "api/node_modules/**/*", 
      "data/node_modules/**/*", 
      "game-engine/node_modules/**/*", 
      "sidekick/node_modules/**/*", 
      "api/dist/**/*",
      "data/dist/**/*",
      "game-engine/dist/**/*",
      "sidekick/dist/**/*"
    ]
  }
}